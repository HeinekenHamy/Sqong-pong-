<h2 class="text-3xl font-extrabold text-center mb-8 text-indigo-600">
  Forgot your password?
</h2>

<%= form_for(resource, as: resource_name,
              url: password_path(resource_name),
              html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <!-- Email Field -->
  <div class="mb-4">
    <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.email_field :email,
          required: true,
          autofocus: true,
          autocomplete: "email",
          class: "w-full border border-gray-300 rounded px-3 py-2
                 focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
  </div>

  <!-- Submit Button -->
  <div class="mb-6">
    <%= f.submit "Send reset instructions",
          class: "w-full py-2 bg-indigo-600 text-white rounded
                 hover:bg-indigo-700 transition" %>
  </div>
<% end %>

<!-- Devise Links (Sign In, Sign Up) -->
<div class="mt-6 text-center text-sm text-gray-600">
  <%= render "devise/shared/links" %>
</div>
