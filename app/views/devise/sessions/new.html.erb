<h2 class="text-3xl font-extrabold text-center mb-8 text-indigo-600">
  Sign In
</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <!-- Email Field -->
  <div class="mb-4">
    <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.email_field :email,
          required: true,
          autofocus: true,
          autocomplete: "email",
          class: "w-full border border-gray-300 rounded px-3 py-2
                 focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
  </div>

  <!-- Password Field -->
  <div class="mb-4">
    <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.password_field :password,
          required: true,
          autocomplete: "current-password",
          class: "w-full border border-gray-300 rounded px-3 py-2
                 focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
  </div>

  <!-- Remember Me & Forgot Password -->
  <div class="flex items-center justify-between mb-6">
    <label class="inline-flex items-center">
      <%= f.check_box :remember_me,
            class: "h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded" %>
      <span class="ml-2 text-sm text-gray-700">Remember me</span>
    </label>

    <% if devise_mapping.recoverable? %>
      <%= link_to "Forgot your password?",
            new_password_path(resource_name),
            class: "text-sm text-indigo-600 hover:underline" %>
    <% end %>
  </div>

  <!-- Submit Button -->
  <div>
    <%= f.submit "Sign In",
          class: "w-full py-2 bg-indigo-600 text-white rounded
                 hover:bg-indigo-700 transition" %>
  </div>
<% end %>

<!-- Devise Links (e.g. Sign up) -->
<div class="mt-6 text-center text-sm text-gray-600">
  <%= render "devise/shared/links" %>
</div>
