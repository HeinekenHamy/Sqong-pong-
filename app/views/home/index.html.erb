<% if user_signed_in? %>
  <h1>Welcome, <%= current_user.username %>!</h1>
  <p>Your high score: <strong><%= current_user.scores.maximum(:value) || 0 %></strong></p>

  <div class="actions">
    <%= link_to "Play Pong", game_path, class: "button" %>
    <%= link_to "View Leaderboard", scores_path, class: "button" %>
  </div>
<% else %>

<div class="flex flex-col items-center justify-center h-full py-32">
  <h1 class="text-4xl font-extrabold text-indigo-500 mb-6">
    Welcome to Sqong
  </h1>
  <p class="text text-gray-700">
    please sign in or sign up to play
  </p>
  <br>
  <%= link_to "Play as Guest", game_path, class: "px-6 py-3 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition duration-200 text-xl" %>
</div>

<% end %>
